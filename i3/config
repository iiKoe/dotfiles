# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        bindsym l resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym h resize grow width 10 px or 10 ppt

        bindsym Shift+h resize shrink width 2 px or 2 ppt
        bindsym Shift+k resize grow height 2 px or 2 ppt
        bindsym Shift+j resize shrink height 2 px or 2 ppt
        bindsym Shift+l resize grow width 2 px or 2 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Change the gap
mode "gapsize" {
        # These bindings trigger as soon as you enter the resize mode
        bindsym h gaps horizontal current plus 20
        bindsym l gaps horizontal current minus 20
        bindsym j gaps vertical current plus 20
        bindsym k gaps vertical current minus 20

        bindsym n gaps outer current plus 20
        bindsym m gaps outer current minus 20

        bindsym g gaps outer current set 1

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+g mode "gapsize"

set $displayMode "Set display mode [w]ork [l]aptop [o]ffice"
bindsym $mod+Shift+s mode $displayMode
mode $displayMode {
    bindsym w exec "~/.screenlayout/layout-work.sh"; \
        mode "default"

    bindsym l exec "~/.screenlayout/layout-laptop.sh"; \
        mode "default"

    bindsym o exec "~/.screenlayout/layout-office.sh"; \
        mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

